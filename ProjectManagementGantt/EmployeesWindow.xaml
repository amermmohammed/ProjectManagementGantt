<Window
    x:Class="ProjectManagementGantt.EmployeesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectManagementGantt"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Mitarbeiterliste"
    MinHeight="300" MinWidth="400"
    mc:Ignorable="d" d:DesignHeight="482.46" d:DesignWidth="851.033">
    <Grid>
        <DataGrid Name="employeesDataGrid" ColumnWidth="*" SelectionChanged="employeesDataGrid_SelectionChanged" EnableColumnVirtualization="True" HeadersVisibility="Column" Margin="0,0,0,110" IsReadOnly="True" SelectionMode="Single"/>
        <DockPanel LastChildFill="False" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,25">
            <Button
            Name="addEmployee"
            Width="104"
            Height="37"
            Click="Button_Click"
            Content="Neu"/>
            <Button
            Name="editEmployee"
            Width="104"
            Height="37"
            Content="Bearbeiten" Margin="10,0,10,0" Click="editEmployee_Click"/>
            <Button
            Name="deleteEmployee"
            Width="104"
            Height="37"
            Content="Löschen" Click="deleteEmployee_Click"/>
        </DockPanel>
    </Grid>
</Window>
