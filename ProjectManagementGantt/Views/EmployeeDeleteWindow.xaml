<Window x:Class="ProjectManagementGantt.EmployeeDeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectManagementGantt"
        mc:Ignorable="d"
        Title="EmployeeDeleteWindow" Height="150" Width="400">
    <Grid>
        <TextBlock TextWrapping="Wrap" Width="334" Text="Möchten Sie den ausgewählten Benutzer wirklich löschen?" FontWeight="Bold" Height="20" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,30,0,0"/>
        <DockPanel Margin="0,75,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Nein" Margin="0,0,25,0" FontWeight="Bold" Width="45" Height="25" Click="Button_Click"/>
            <Button Content="Ja" Width="45" FontWeight="Bold" Click="Button_Click_1"/>
        </DockPanel>
    </Grid>
</Window>
