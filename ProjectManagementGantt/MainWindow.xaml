<Window x:Class="ProjectManagementGantt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectManagementGantt"
        mc:Ignorable="d"
        Title="Projektverwaltung Version 1.0" Height="150" Width="250">
    <Grid>
        <Button x:Name="btnProjects" Content="Projekte" HorizontalAlignment="Left" VerticalAlignment="Center" Width="105" Click="btnProjects_Click" Margin="10,0,0,0"/>
        <Button x:Name="btnEmployees" Content="Mitarbeiter" VerticalAlignment="Center" Width="105" Click="btnEmployees_Click" HorizontalAlignment="Right" Margin="0,0,10,0"/>
    </Grid>
</Window>
